{
  "name": "findmybook-frontend",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": "22.17.0"
  },
  "packageManager": "npm@10.9.2",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:css": "vite build",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint:ox": "oxlint -c config/oxlintrc.json src/",
    "lint:fix": "oxlint -c config/oxlintrc.json --fix src/",
    "validate": "npm run check && npm run lint:ox && npm run test"
  },
  "dependencies": {
    "@lucide/svelte": "^0.563.1",
    "@stomp/stompjs": "^7.2.0",
    "dompurify": "^3.3.1",
    "sockjs-client": "^1.6.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@tailwindcss/vite": "^4.1.18",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/svelte": "^5.2.7",
    "@tsconfig/svelte": "^5.0.6",
    "@types/dompurify": "^3.0.5",
    "@types/node": "^22.17.0",
    "@types/sockjs-client": "^1.5.4",
    "@vitest/coverage-v8": "^3.0.4",
    "eslint": "^9.39.2",
    "eslint-plugin-zod": "^3.1.0",
    "happy-dom": "^20.3.4",
    "oxlint": "^1.47.0",
    "svelte": "^5.53.0",
    "svelte-check": "^4.3.5",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^3.0.4"
  }
}
